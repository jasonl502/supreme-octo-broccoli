    <title>Emily - Your Virtual Friend</title>
    <style>
        /* Chat container */
        #chat-container {
            width: 300px;
            height: 500px;
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            position: fixed;
            bottom: 10px;
            right: 10px;
            background-color: #f9f9f9;
            animation: slideIn 1s ease forwards;
        }

        /* Chat messages */
        #chat-messages {
            height: 450px;
            overflow-y: auto;
            padding: 10px;
        }

        /* User input */
        #user-input {
            width: calc(100% - 60px);
            padding: 5px;
            border: none;
            border-top: 1px solid #ccc;
        }

        /* Send button */
        button {
            width: 60px;
            border: none;
            background-color: #4CAF50; /* Green */
            color: white;
            padding: 10px 0;
        }

        button:hover {
            background-color: #45a049; /* Darker green */
        }

        /* Emily's entrance animation */
        @keyframes slideIn {
            from {
                transform: translateY(100%);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Custom styles for messages */
        .emily-message {
            background-color: #e1f5fe;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .user-message {
            background-color: #c8e6c9;
